<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    package="com.example.laurentiudragunoi.music">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_play_name"/>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists_name"/>
        <activity
            android:name=".LibraryActivity"
            android:label="@string/library_name"/>
        <activity
            android:name=".SearchActivity"
            android:label="@string/search_name" />
        <activity
            android:name=".PlaylistActivity"
            android:label="Playlist" />
        <activity android:name=".ArtistActivity"
            android:label="@string/artist_name"/>
    </application>

</manifest>